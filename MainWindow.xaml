<Window x:Class="screenring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="screenring" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        SizeChanged="MainWindow_SizeChanged"
        IsVisibleChanged="MainWindow_IsVisibleChanged">
    <Grid>
        <!-- Main ring grid which gets clipped to create the transparent hole(s) -->
        <Grid x:Name="RingGrid" IsHitTestVisible="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Top / Bottom / Left / Right rectangles that form the ring -->
            <Rectangle x:Name="TopRect" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Fill="#CC000000" Height="50" />
            <Rectangle x:Name="BottomRect" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Fill="#CC000000" Height="50" />
            <Rectangle x:Name="LeftRect" Grid.Row="1" Grid.Column="0" Fill="#CC000000" Width="50" />
            <Rectangle x:Name="RightRect" Grid.Row="1" Grid.Column="2" Fill="#CC000000" Width="50" />

            <!-- Canvas for positioning face highlight ellipse -->
            <Canvas x:Name="OverlayCanvas" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3" IsHitTestVisible="False">
                <Ellipse x:Name="FaceHighlight"
                         Width="200" Height="200"
                         Fill="#40FFD54F" Stroke="#80FFD54F" StrokeThickness="4"
                         Visibility="Collapsed"
                         IsHitTestVisible="False" />
            </Canvas>
        </Grid>
    </Grid>
</Window>
